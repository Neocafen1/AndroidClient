<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.bottom_navigation_items.home.home_search.SearchFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:background="@drawable/custom_button_positive"
        android:layout_margin="@dimen/default_margin_start_16dp"
        android:focusable="true"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/search"
            style="@style/registration_edit_text"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:inputType="text"
            android:textAlignment="center"/>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>