<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/title"
        style="@style/TextView_18sp_Roboto"
        android:layout_marginStart="@dimen/margin_30_dp"
        android:layout_marginTop="@dimen/default_margin_start_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Ваш заказ готов" />

    <TextView
        android:id="@+id/time"
        style="@style/TextView_14sp_Roboto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/default_margin_start_16dp"
        tools:text="18:15" />

    <TextView
        android:id="@+id/message"
        style="@style/TextView_16sp_Thin"
        android:layout_marginTop="@dimen/default_margin_start_16dp"
        android:layout_marginEnd="@dimen/margin_30_dp"
        android:layout_marginStart="@dimen/margin_30_dp"
        android:maxLines="1"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />



</androidx.constraintlayout.widget.ConstraintLayout>