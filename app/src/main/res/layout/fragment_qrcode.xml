<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_purple_enable_color"
    android:orientation="vertical"
    tools:context=".view.bottom_navigation_items.qr.QRcodeFragment">


    <include
        android:id="@+id/include"
        layout="@layout/bottom_navigation_main_screen_app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/layout_top_rounded">

        <TextView
            android:visibility="gone"
            android:id="@+id/text_view"
            style="@style/TextView_18sp_Thin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/qr_code_how_work"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.budiyev.android.codescanner.CodeScannerView
            android:visibility="gone"
            android:id="@+id/scanner_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            app:autoFocusButtonColor="@android:color/white"
            app:autoFocusButtonVisible="true"
            app:flashButtonColor="@android:color/white"
            app:flashButtonVisible="true"
            app:frameAspectRatioHeight="1"
            app:frameAspectRatioWidth="1"
            app:frameColor="@android:color/white"
            app:frameCornersRadius="0dp"
            app:frameCornersSize="50dp"
            app:frameSize="0.75"
            app:frameThickness="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/text_view"
            app:maskColor="#77000000" />

        
        <TextView
            android:id="@+id/title"
            android:layout_width="300dp"
            style="@style/TextView_18sp_Bold"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:textAlignment="center"
            android:textSize="20sp"
            tools:text="Стол овдлпрырвполырплыдп аьфыа"/>

        <TextView
            android:id="@+id/message"
            style="@style/TextView_18sp_Thin"
            android:text="@string/booked"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/go_to_menu"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_18_dp"
            android:text="@string/go_to_menu"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:background="@drawable/button_enable_custom_style"/>

    </LinearLayout>



</LinearLayout>


