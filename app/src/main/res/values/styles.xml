<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">22dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="registration_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="registration_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="registration_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/button_disable_custom_item</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="registration_main_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="Custom_toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/main_purple_enable_color</item>
    </style>

    <style name="Toolbar_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textView_naimenovanie">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#5D5A65</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="grey_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">#5C5C5C</item>
    </style>

    <style name="default_nested_scroll_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:background">@color/main_purple_enable_color</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="default_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_height">200dp</item>
    </style>
</resources>