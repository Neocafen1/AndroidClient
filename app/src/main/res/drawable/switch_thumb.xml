<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/main_purple_disabled_color"/>
            <size android:width="20sp"
                android:height="20sp"/>
            <stroke android:width="1dp"
                android:color="@color/main_purple_disabled_color"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/main_purple_enable_color"/>
            <size android:width="5sp"
                android:height="5sp"/>
            <stroke android:width="1dp"
                android:color="@color/main_purple_enable_color"/>
        </shape>
    </item>
</selector>
